<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Edittext-->
    <style name="StyleEdittext" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_13</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_13</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_13</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_13</item>
        <item name="boxStrokeColor">@color/green_dark_300</item>
    </style>



    <!--TextView-->
    <style name="StyleTvTitleBlueDark_20" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue_dark_700</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/size_20</item>
    </style>

    <style name="StyleTvLightBlueDark_16" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue_dark_700</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <style name="StyleTvBoldBlueDark_200_16" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue_dark_200</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <style name="StyleTvTitleGreenDark_100_20" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/green_dark_100</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/size_20</item>
    </style>

    <style name="StyleTvLightGreen_100_16" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/green_dark_100</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <style name="StyleTvLightPurple_16" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple_700</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <style name="StyleTvPurple_22" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple_700</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/size_22</item>
    </style>




    <style name="StyleCardViewSubMain" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <!--Buttons-->
    <style name="StyileBtnDarkBlue" parent="">
        <item name="backgroundTint">@color/blue_dark_700</item>
        <item name="cornerFamily">rounded</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="cornerRadius">@dimen/corner_radius_10</item>
        <item name="android:textSize">@dimen/size_20</item>
    </style>

    <style name="StyleBtnToPay" parent="">
        <item name="backgroundTint">@color/green_dark_100</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:textColor">@color/blue_dark_700</item>
        <item name="cornerRadius">@dimen/corner_radius_13</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>